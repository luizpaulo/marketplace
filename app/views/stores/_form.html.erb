<%= form_for(resource) do |f| %>
  <%= render 'shared/error_messages' %>

  <fieldset>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :api_url %><br>
      <%= f.text_field :api_url, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :api_user %><br>
      <%= f.text_field :api_user, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :api_password %><br>
      <%= f.text_field :api_password, class: 'form-control' %>
    </div>
    <p>
      <%= f.submit 'Salvar', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', :back, class: 'btn btn-default'  %>
    </p>
  </fieldset>
<% end %>
